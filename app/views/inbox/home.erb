<h1>Inbox Home</h1>
<% current_user.conversations.each do |c| %>
  <% puts c.to_json %>
  <div class="card mx-2">
    <h5 class="card-title my-2 mx-3" data-toggle="collapse" data-target="#emails-<%= c.id %>"><%= c.subject %></h4>
    <div class="collapse" id="emails-<%= c.id %>">
      <ul class="list-group list-group-flush">
      <% c.emails.each do |e| %>
        <li class="list-group-item">
          <strong><%= e.from %></strong>
          <% if e.raw.body %>
            <p><%= e.raw.body %></p>
          <% else %>
            <p class="text-secondary">No Body Content</p>
          <% end %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
